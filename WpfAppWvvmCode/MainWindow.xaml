<Window x:Class="WpfAppWvvmCode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppWvvmCode"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <!--MVVM 模型抽象，3个数据属性，2个命令属性-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="btnSave" Height="50" Content="Save"/>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBox x:Name="txt1" Grid.Row="0" Margin="4" Background="LightBlue" Text="{Binding Input1}"/>
            <TextBox x:Name="txt2" Grid.Row="1" Margin="4" Background="LightBlue" Text="{Binding Input2}"/>
            <TextBox x:Name="txt3" Grid.Row="2" Margin="4" Background="LightBlue" Text="{Binding Result}"/>
            <Slider x:Name="sld1" Grid.Row="3" Margin="4" Background="LightGreen" Maximum="100" Value="{Binding Input1}"/>
            <Slider x:Name="sld2" Grid.Row="4" Margin="4" Background="LightGreen" Maximum="100" Value="{Binding Input2}"/>
            <Slider x:Name="sld3" Grid.Row="5" Margin="4" Background="LightGreen" Maximum="100" Value="{Binding Result}"/>
            <Button x:Name="btn1" Grid.Row="6" Width="100" Height="50" Content="Add" Command="{Binding AddCommand}"/>
        </Grid>
    </Grid>
</Window>
