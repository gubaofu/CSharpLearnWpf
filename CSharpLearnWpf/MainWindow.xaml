<Window x:Class="CSharpLearnWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharpLearnWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Background="LightBlue">
            <TextBox x:Name="textBox1" Margin="5"/>
            <TextBox x:Name="textBox2" Margin="5"/>
            <!--<TextBox x:Name="textBox3" Margin="5"/>-->
            <Button x:Name="button1" Margin="5" Click="button1_Click">
                <TextBlock Text="hello wpf"/>
            </Button>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Button x:Name="button2" Margin="5" Content="Draw" Click="Button2_Click"/>
            <Button x:Name="button3" Margin="5" Content="AttributeConvert" Click="Button3_Click"/>
            <Button x:Name="button4" Margin="5" Content="FlagExtension" Click="Button4_Click"/>
            <Button x:Name="button5" Margin="5" Content="Event Handler" Click="Button5_Click"/>
            <Button x:Name="button6" Margin="5" Content="UserControl" Click="Button6_Click"/>
        </StackPanel>
    </Grid>
</Window>
