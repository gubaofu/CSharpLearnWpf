<Window x:Class="CSharpLearnWpf.WindowAttributeConvert"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharpLearnWpf"
        mc:Ignorable="d"
        Title="WindowAttributeConvert" Height="450" Width="800">
    <!--属性值自动转换，将 string 类型转换为 Human 类型，自定义转换方法-->
    <Window.Resources>
        <!--创建一个对象资源，在 Window.Resources 资源集是字典类型，需要 Key 索引-->
        <local:Human x:Key="human" Name="Tim" Child="Little-Tim"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btn1" Width="100" Height="30" Content="Click" Click="Btn1_Click"/>
        <Button x:Name="btn2" Width="100" Height="30" Content="Click" Grid.Row="1"  Click="Btn2_Click"/>
    </Grid>
</Window>
