<Window x:Class="CSharpLearnWpf.WindowAttributeFlag"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharpLearnWpf"
        mc:Ignorable="d"
        Title="WindowAttributeFlag" Height="450" Width="800">
    <Grid>
        <!--在button中添加一个小矩形-->
        <Button Width="400" Height="200">
            <!--属性标签-->
            <!--创建一个 Button.Content 对象，然后赋值给 Button 中的 Content 属性-->
            <Button.Content>
                <Rectangle Width="100" Height="100" Stroke="Red" Fill="Green"/>
            </Button.Content>
        </Button>
    </Grid>
</Window>
