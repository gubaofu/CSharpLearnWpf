<Window x:Class="CSharpLearnWpf.WindowAttributeFlag"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharpLearnWpf"
        mc:Ignorable="d"
        Title="WindowAttributeFlag" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <!--在button中添加一个小矩形-->
        <Button Grid.Row="0" Width="400" Height="100" Content="button1"/>
        <Rectangle Grid.Row="1" Width="100" Height="50" Stroke="Red" Fill="Green"/>
        <!--<Button Width="400" Height="200" Content="<Rectangle Width="100" Height="100" Stroke="Red" Fill="Green"/>"/>-->
        <Button Grid.Row="2" Width="400" Height="100">
            <!--属性标签-->
            <!--创建一个 Button.Content 对象，然后赋值给 Button 中的 Content 属性-->
            <Button.Content>
                <Rectangle Width="100" Height="50" Stroke="Red">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Offset="0.2" Color="White"/>
                                <GradientStop Offset="0.5" Color="LightGreen"/>
                                <GradientStop Offset="1" Color="Green"/>
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </Button.Content>
        </Button>
    </Grid>
</Window>
