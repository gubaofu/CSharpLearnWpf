<Window x:Class="CSharpLearnWpf.WindowDraw"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSharpLearnWpf"
        mc:Ignorable="d"
        Title="WindowDraw" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Stroke="Red" Fill="Green" RadiusX="10" RadiusY="10" Margin="146,177,147,178"/>
        <Path Data="M 50,50 L 100,100 L 50,150 Z" Stroke="Red" Fill="Yellow"/>
        <Rectangle Stroke="Red" Grid.Column="1" Margin="153,177,89,178">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <LinearGradientBrush.GradientStops>
                        <GradientStop Offset="0.2" Color="White"/>
                        <GradientStop Offset="0.5" Color="LightGreen"/>
                        <GradientStop Offset="1" Color="Green"/>
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</Window>
