<Window x:Class="WpfAppWvvmPrismDemo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppWvvmPrismDemo"
        xmlns:prism="http://prismlibrary.com/"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        prism:ViewModelLocator.AutoWireViewModel="True">
    <!--使用 ViewModelLocator.AutoWireViewModel 绑定 ViewModel 和 View-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox x:Name="txt1" Grid.Row="0" Margin="4" Background="LightBlue" Text="{Binding Input1}"/>
        <TextBox x:Name="txt2" Grid.Row="1" Margin="4" Background="LightBlue" Text="{Binding Input2}"/>
        <TextBox x:Name="txt3" Grid.Row="2" Margin="4" Background="LightBlue" Text="{Binding Result}"/>
        <Slider x:Name="sld1" Grid.Row="3" Margin="4" Background="LightGreen" Maximum="100" Value="{Binding Input1}"/>
        <Slider x:Name="sld2" Grid.Row="4" Margin="4" Background="LightGreen" Maximum="100" Value="{Binding Input2}"/>
        <Slider x:Name="sld3" Grid.Row="5" Margin="4" Background="LightGreen" Maximum="100" Value="{Binding Result}"/>
        <Button x:Name="btn1" Grid.Row="6" Width="100" Height="40" Content="Add" Command="{Binding AddCommand}"/>
        <ListView  Grid.Row="7" Height="120" ItemsSource="{Binding Customers}"   SelectedItem="{Binding SelectedCustomer}"  />
        <Button Grid.Row="8"  Width="100" Height="40" Content="LOAD"  Command="{Binding CommandLoad}"  />
        <Button Grid.Row="9"  Width="200" Height="40" Content="Open Restaurant"  Command="{Binding OpenRestCommand}"  />
    </Grid>
</Window>
